{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Oculus Game",
  "description": "A game from the Oculus Home store",
  "type": "object",
  "properties": {
    "oculus_id": {
      "description": "The Oculus ID in the Oculus Store",
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "price": {
      "type": "integer",
      "minimum": 0
    },
    "price_regular": {
      "oneOf": [
        {"type": "integer", "minimum": 0},
        {"type": "null"}
      ]
    },
    "released_at": {
      "type": "string",
      "format": "date-time"
    },
    "summary": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "genres": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "age_rating": {
      "type": ["string", "null"]
    },
    "developer": {
      "type": "string"
    },
    "publisher": {
      "type": "string"
    },
    "vr_mode": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["SITTING", "STANDING", "ROOM_SCALE"]
      }
    },
    "vr_tracking": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["DEGREE_360", "FRONT_FACING"]
      }
    },
    "vr_controllers": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "OCULUS_TOUCH",
          "OCULUS_REMOTE",
          "GAMEPAD",
          "KEYBOARD_MOUSE",
          "FLIGHT_STICK",
          "RACING_WHEEL",
          "HYDRA"
        ]
      }
    },
    "players": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["SINGLE_USER", "MULTI_USER", "CO_OP"]
      }
    },
    "comfort": {
      "type": "string",
      "enum": ["NOT_RATED", "COMFORTABLE_FOR_MOST", "COMFORTABLE_FOR_SOME", "COMFORTABLE_FOR_FEW"]
    },
    "internet": {
      "type": "string",
      "enum": ["REQUIRED_FOR_DOWNLOAD", "NOT_REQUIRED", "REQUIRED"]
    },
    "sysreq_hdd": {
      "type": "integer"
    },
    "sysreq_cpu": {
      "type": ["string", "null"]
    },
    "sysreq_gpu": {
      "type": ["string", "null"]
    },
    "sysreq_ram": {
      "type": ["integer", "null"]
    },
    "website_url": {
      "type": "string"
    },
    "rating_1": {
      "type": "integer",
      "minimum": 0
    },
    "rating_1": {
      "type": "integer",
      "minimum": 0
    },
    "rating_2": {
      "type": "integer",
      "minimum": 0
    },
    "rating_3": {
      "type": "integer",
      "minimum": 0
    },
    "rating_4": {
      "type": "integer",
      "minimum": 0
    },
    "rating_5": {
      "type": "integer",
      "minimum": 0
    },
    "thumbnail": {
      "type": "uri"
    },
    "screenshots": {
      "type": "array",
      "items": {
        "type": "uri"
      }
    },
    "trailer_video": {
      "type": ["uri", "null"]
    },
    "trailer_thumbnail": {
      "type": ["uri", "null"]
    }
  },
  "required": [
    "oculus_id",
    "name",
    "price",
    "price_regular",
    "released_at",
    "summary",
    "version",
    "category",
    "genres",
    "languages",
    "age_rating",
    "developer",
    "publisher",
    "vr_mode",
    "vr_tracking",
    "vr_controllers",
    "players",
    "comfort",
    "internet",
    "sysreq_hdd",
    "sysreq_cpu",
    "sysreq_gpu",
    "sysreq_ram",
    "website_url",
    "rating_1",
    "rating_2",
    "rating_3",
    "rating_4",
    "rating_5",
    "thumbnail",
    "screenshots",
    "trailer_video",
    "trailer_thumbnail"
  ]
}
