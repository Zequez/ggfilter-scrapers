{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Steam Game reviews",
  "description": "Reviews playtime of a Steam game",
  "type": "object",
  "properties": {
    "steam_id": {
      "type": "integer",
      "minimum": 0
    },
    "positive": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      }
    },
    "negative": {
      "type": "array",
      "items": {
        "type": "number",
        "minimum": 0
      }
    }
  },
  "required": [
    "steam_id",
    "positive",
    "negative"
  ]
}
